<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nome do Relógio -->
    <TextView
        android:id="@+id/tvWatchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Relógio"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Imagem do Relógio -->
    <ImageView
        android:id="@+id/ivWatchImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:src="@drawable/relogio_default_image" />

    <!-- Descrição do Relógio -->
    <TextView
        android:id="@+id/tvWatchDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do Relógio"
        android:textSize="18sp"
        android:textColor="@color/colorTextSecondary"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Preço do Relógio -->
    <TextView
        android:id="@+id/tvWatchPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 5000,00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:gravity="center" />

    <!-- Botões para Editar e Apagar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Botão Editar -->
        <Button
            android:id="@+id/btnEditWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginEnd="8dp"/>

        <!-- Botão Apagar -->
        <Button
            android:id="@+id/btnDeleteWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apagar" />
    </LinearLayout>

</LinearLayout>
